<div class= "headline">
  <h1>BrillBOOKS</h1>
</div>

<br/> <br/>
<div class="card-deck">
<% @books.each do |book| %>
    <div class="card">
      <div class="card-block">
        <h4 class="card-title"><%= book.title %></h4>
        <h6 class="card-title"><%= book.author %></h6>
        <p class="card-text"><%= book.summary %></p>
      </div>
    </div>
<% end %>
 </div>

